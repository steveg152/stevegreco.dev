---
interface Props {
  title: string
  date: string
  company: string
  description: string
}

const { title, date, company, description }: Props = Astro.props
---

<div class="flex flex-col items-start">
  <div class="flex items-center gap-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-calendar-days"
      ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
        width="18"
        height="18"
        x="3"
        y="4"
        rx="2"></rect><path d="M3 10h18"></path><path d="M8 14h.01"></path><path
        d="M12 14h.01"></path><path d="M16 14h.01"></path><path d="M8 18h.01"
      ></path><path d="M12 18h.01"></path><path d="M16 18h.01"></path></svg
    ><div class="grid gap-1">
      <div class="text-sm font-medium">{date}</div><div
        class="text-xs text-gray-500 dark:text-gray-400"
      >
        {company}
      </div>
    </div>
  </div><div class="mt-2">
    <h3 class="md:text-lg text-primary">{title}</h3>
    <!-- <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      {description}
    </p> -->
  </div>
</div>
