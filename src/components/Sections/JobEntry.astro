---
interface Props {
  title: string
  date: string
  company: string
}

const { title, date, company }: Props = Astro.props
---

<div class="flex flex-col items-start gap-1">
  <div class="mt-2">
    <h3 class="text-foreground text-lg">{title}</h3>
  </div>
  <div
    class="flex justify-between items-center w-full text-muted-foreground text-sm"
  >
    <div>
      {company}
    </div>
    <div>{date}</div>
  </div>
</div>
