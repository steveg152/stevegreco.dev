---
interface Props {
  href: string
}

const { href } = Astro.props
---

<a
  class="inline-flex px-3 py-2 text-sm justify-center items-center rounded-md bg-slate-800 hover:bg-slate-700 text-slate-200"
  href={href}
  target="_blank"
  ><slot />
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-arrow-down pl-2"
    ><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"></path></svg
  ></a
>
