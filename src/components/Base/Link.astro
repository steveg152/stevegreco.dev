---
interface Props {
  slug: string
  external?: boolean
}

const { slug, external }: Props = Astro.props
---

{
  external && (
    <a
      class="text-foreground text-sm lg:text-base inline-block"
      target="_blank"
      href={slug}
    >
      <slot />
    </a>
  )
}

{
  !external && (
    <a class="text-foreground text-sm lg:text-base inline-block" href={slug}>
      <slot />
    </a>
  )
}
