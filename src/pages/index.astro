---
import Layout from '../layouts/Layout.astro'
import Projects from '@components/Sections/Projects.astro'
import Certifications from '@components/Sections/Certifications.astro'
import BlogList from '@components/Sections/BlogList.astro'
import Experience from '@components/Sections/Experience.astro'
import { LinkButton } from '@/registry/link-button/link-button'
---

<Layout
  title="Steve Greco - Senior Software Engineer"
  description="I am a software engineer with 11+ years of experience specializing in front-end development, design systems and testing automation. Currently open to new opportunities and looking for my next challenge."
>
  <div>
    <div class="flex lg:w-full lg:flex-col lg:justify-between lg:pb-16">
      <section class="mb-6">
        <div class="flex justify-start items-center gap-4">
          <div class="w-full lg:w-3/4">
            <h1 class="flex text-3xl lg:text-6xl tracking-tight">
              Stephen Greco
            </h1>
            <p class="mt-4 mb-8">
              I am a software engineer with 12+ years of experience specializing
              in front-end development, design systems and testing automation.
            </p>
          </div>
        </div>

        <LinkButton />
      </section>
      <!-- <Image src="/public/Designer.png" height={400} width={400} alt="Steve" /> -->
    </div>
    <div class="pt-4 lg:w-full">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
        <section
          id="blog"
          class="mb-8 scroll-mt-16 md:mb-16 lg:mb-24 lg:scroll-mt-24 lg:col-span-3"
        >
          <BlogList />
        </section>
        <div
          class="grid grid-cols-1 col-span-1 md:col-span-2 gap-6 scroll-mt-16 lg:scroll-mt-24"
        >
          <section id="projects" class="">
            <Experience />
          </section>
          <section id="projects" class="">
            <Projects />
          </section>
          <section class="">
            <Certifications />
          </section>
        </div>
      </div>
    </div>
  </div>
</Layout>
