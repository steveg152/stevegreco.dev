---
import Layout from '@/layouts/Layout.astro'
import FormattedDate from '@/components/FormattedDate.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
)
---

<Layout title="Writing - Steve Greco" description="Thoughts on Design Systems, AI, and software engineering.">
  <div class="max-w-prose mx-auto px-4 py-8 md:py-16">
    <h1 class="text-3xl md:text-5xl font-bold tracking-tight">Writing</h1>
    <p class="mt-4 text-muted-foreground">
      Thoughts on Design Systems, AI, and the craft of building software.
    </p>

    <div class="mt-10 divide-y divide-border">
      {posts.map((post) => (
        <a
          href={`/blog/${post.slug}`}
          class="group block py-6 first:pt-0"
        >
          <div class="flex items-baseline gap-3 text-xs font-mono text-muted-foreground mb-1.5">
            <FormattedDate date={post.data.date} />
          </div>
          <h2 class="text-lg md:text-xl font-semibold group-hover:text-primary transition-colors">
            {post.data.title}
          </h2>
        </a>
      ))}
    </div>
  </div>
</Layout>
