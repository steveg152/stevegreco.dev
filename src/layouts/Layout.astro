---
interface Props {
  title: string
}

const { title } = Astro.props

import { ViewTransitions } from 'astro:transitions'
import '../styles/base.css'
---

<!doctype html>
<html lang="en" class="bg-slate-900 text-slate-200 leading-relaxed font-steve">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Software Engineer with 11+ years of experience specializing in front-end development, design systems and testing automation."
    />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:image" content="/SocialImage.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title}
    </title>
    <ViewTransitions />
  </head>
  <body>
    <div>
      <slot name="header" />
    </div>
    <div
      class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 md:px-12 md:py-20 lg:px-24 lg:py-0"
      transition:animate="fade"
    >
      <slot />
    </div>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
